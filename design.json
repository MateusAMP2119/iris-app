{
  "designSystem": {
    "name": "News Aggregator App Design System",
    "version": "1.0",
    "overview": {
      "designPhilosophy": "Minimalist, content-focused design that respects user time with clean typography, generous whitespace, and clear information hierarchy",
      "targetPlatform": "iOS mobile application",
      "primaryPurpose": "Curated news consumption with read-later functionality"
    },
    "typography": {
      "primaryFont": "SF Pro (System Font)",
      "hierarchy": {
        "display": {
          "size": "34-40px",
          "weight": "700-800 (Bold/Heavy)",
          "usage": "Main headings, section titles",
          "examples": ["News.", "Breaking News", "Read Later"]
        },
        "title": {
          "size": "20-24px",
          "weight": "600-700 (Semibold/Bold)",
          "usage": "Article headlines, card titles",
          "lineHeight": "1.2-1.3"
        },
        "body": {
          "size": "15-17px",
          "weight": "400 (Regular)",
          "usage": "Descriptions, article previews",
          "lineHeight": "1.4-1.5"
        },
        "caption": {
          "size": "13-14px",
          "weight": "400 (Regular)",
          "usage": "Dates, metadata, secondary information",
          "color": "rgba(0,0,0,0.5)"
        }
      },
      "principles": [
        "High contrast for readability",
        "Generous line spacing",
        "Limited font weights for clarity",
        "Left-aligned text throughout"
      ]
    },
    "colorPalette": {
      "primary": {
        "background": "#FFFFFF",
        "text": "#000000",
        "description": "Pure black on white for maximum readability"
      },
      "secondary": {
        "gray100": "#F5F5F5",
        "gray200": "#E5E5E5",
        "gray400": "#999999",
        "gray600": "#666666",
        "description": "Subtle grays for backgrounds and dividers"
      },
      "accent": {
        "primary": "#FF2D55",
        "description": "Bright pink/red for active states, bookmarks, and CTAs"
      },
      "semantic": {
        "cardBackground": "#FFFFFF",
        "divider": "rgba(0,0,0,0.1)",
        "shadow": "rgba(0,0,0,0.08)"
      }
    },
    "spacing": {
      "scale": "8px base unit",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px"
      },
      "application": {
        "screenPadding": "16-20px horizontal",
        "cardPadding": "16-20px all sides",
        "elementSpacing": "12-16px between related items",
        "sectionSpacing": "32-48px between major sections"
      }
    },
    "layout": {
      "grid": {
        "type": "Flexible single column with cards",
        "columns": 1,
        "gutters": "16-20px",
        "maxWidth": "100% of screen minus padding"
      },
      "principles": [
        "Single column for mobile-first approach",
        "Card-based content organization",
        "Generous whitespace between sections",
        "Clear visual hierarchy through size and spacing"
      ]
    },
    "components": {
      "navigationBar": {
        "position": "Bottom of screen",
        "height": "80-90px including safe area",
        "style": "Transparent background with icons",
        "items": [
          {
            "type": "Icon button",
            "iconStyle": "Line icons or filled when active",
            "labels": ["Today", "For You", "For Later", "Search"],
            "activeState": "Accent color fill with label"
          }
        ]
      },
      "card": {
        "variants": {
          "newsCard": {
            "structure": [
              "Featured image (16:9 or 4:3 aspect ratio)",
              "Source logo/name (small, top left)",
              "Headline (bold, 2-3 lines max)",
              "Date/timestamp (small, gray)",
              "Bookmark icon (top right, optional)"
            ],
            "background": "#FFFFFF",
            "borderRadius": "12-16px",
            "shadow": "0 2px 8px rgba(0,0,0,0.08)",
            "padding": "0 (image full bleed) + 16px for text content",
            "margin": "12-16px between cards"
          },
          "readLaterCard": {
            "structure": [
              "Source publication name/logo",
              "Article headline (2-3 lines)",
              "Thumbnail image (square, aligned right)",
              "Date (small, gray, below headline)"
            ],
            "layout": "Horizontal with thumbnail on right",
            "background": "#FFFFFF",
            "borderRadius": "12px",
            "padding": "16px",
            "imageSize": "80x80px approximately"
          }
        },
        "interactions": {
          "tap": "Navigate to article",
          "longPress": "Context menu for share/save",
          "swipe": "Reveal actions (optional)"
        }
      },
      "headerSection": {
        "structure": [
          "Large title (34-40px, bold)",
          "Optional subtitle/description (15-17px, regular)",
          "Generous top padding (24-32px)"
        ],
        "alignment": "Left",
        "background": "Transparent or subtle gray"
      },
      "sectionHeader": {
        "structure": [
          "Section title (20-24px, bold)",
          "Optional chevron or 'view more' indicator"
        ],
        "spacing": "24px top margin, 16px bottom margin"
      },
      "imageContainer": {
        "aspectRatios": ["16:9", "4:3", "1:1"],
        "borderRadius": "12px (for cards) or 0 (for full bleed)",
        "objectFit": "cover",
        "loading": "Lazy load with placeholder"
      },
      "iconButton": {
        "size": "44x44px minimum (touch target)",
        "iconSize": "20-24px",
        "style": "Line icons, 2px stroke",
        "activeState": "Filled with accent color"
      },
      "sourceLabel": {
        "structure": "Logo + text or badge",
        "size": "Small (24-32px height)",
        "position": "Top left of card or inline with headline",
        "style": "High contrast with background"
      },
      "followingList": {
        "structure": [
          "Grid of circular source avatars (5 columns)",
          "Source name below each avatar",
          "List items below with chevrons"
        ],
        "avatarSize": "56-64px diameter",
        "spacing": "12-16px between avatars",
        "background": "#F5F5F5 or white"
      }
    },
    "screens": {
      "breakingNews": {
        "layout": "Hero card + scrollable grid",
        "sections": [
          "Header (date, title)",
          "Hero story (large image card)",
          "Top Stories (2-column grid of cards)",
          "Bottom navigation"
        ]
      },
      "readLater": {
        "layout": "Vertical list of saved articles",
        "sections": [
          "Header (title)",
          "Scrollable list of horizontal cards",
          "Bottom navigation"
        ]
      },
      "following": {
        "layout": "Source management screen",
        "sections": [
          "Following sources (circular avatars in grid)",
          "Menu items (All Following, Discover, History)"
        ]
      }
    },
    "interactions": {
      "animations": {
        "cardTap": "Subtle scale (0.98) on press, spring back",
        "navigation": "Slide transitions between screens",
        "scrolling": "Smooth, native iOS scroll physics",
        "loading": "Skeleton screens or subtle fade-in"
      },
      "gestures": [
        "Tap: Select/open",
        "Long press: Context menu",
        "Swipe: Navigate or reveal actions",
        "Pull to refresh: Update content"
      ],
      "feedback": {
        "haptic": "Light haptic on button press",
        "visual": "Accent color highlights for active states",
        "transition": "Smooth 300-400ms duration"
      }
    },
    "visualPrinciples": [
      "Content is king: minimal chrome, maximum content",
      "Generous whitespace for breathing room",
      "High contrast for accessibility and readability",
      "Consistent card metaphor throughout",
      "Clear information hierarchy through size and weight",
      "Single accent color for focus and consistency",
      "Photography-forward with quality images",
      "Bottom navigation for thumb-friendly access",
      "No clutter: every element serves a purpose"
    ],
    "responsiveness": {
      "approach": "Mobile-first, single column",
      "breakpoints": "Designed for iPhone (375-428px width)",
      "safeAreas": "Respects iOS safe areas (notch, home indicator)",
      "orientation": "Primarily portrait, adapts to landscape"
    },
    "accessibility": {
      "contrast": "WCAG AAA for body text (7:1 minimum)",
      "touchTargets": "44x44px minimum",
      "textScaling": "Supports dynamic type",
      "voiceOver": "Semantic HTML/native elements for screen readers"
    },
    "contentGuidelines": {
      "headlines": "2-3 lines maximum, clear and concise",
      "descriptions": "1-2 sentences when present",
      "dates": "Relative (Today) or absolute (Month DD, YYYY)",
      "sources": "Always attributed with logo or name",
      "images": "High quality, relevant to content, proper aspect ratios"
    }
  }
}